    <view wx:for="{{commentList}}" wx:key="id" >
      <view style='display: flex;flex-direction: row;'>
        <view>
          <image style='width:200rpx;height:150rpx' mode="aspectFit" src="{{item.user_image}}"></image>
        </view>
        <view >
          <view>{{item.avatar}}</view>
          <view>{{item.content}}</view>
        </view>
      </view>
    </view>